extends ../layout.pug

block content
  div(class="d-flex flex-row content  mx-auto")
    div(class="profile-container ")
      include ../includes/profile.pug
    div(class="flex-fill d-flex flex-column ")
      if tweets 
        each tweet in tweets
          div(class="card mt-3")
            div(class="card-body")= tweet.content
      else
        p Aucun tweet trouvé
        a(href="/tweet/new" class="btn btn-primary mt-3") Créer un tweet